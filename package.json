{
  "name": "github-dashboard",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Henrique Melanda <hjdesigner23@gmail.com> (http://www.henriquemelanda.com.br/)",
  "license": "MIT",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/**/*.js",
    "precommit": "yarn run lint",
    "prepush": "yarn run lint",
    "build": "./node_modules/.bin/webpack --colors --progress",
    "watch": "yarn run build -- --watch",
    "stylus": "stylus --watch --compress --sourcemap ./src/stylus/app.styl --out ./dist/css/app.css",
    "start": "webpack --watch & yarn run stylus & webpack-dev-server  --inline --open",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --require ignore-styles",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --require ignore-styles --watch",
    "test:coverage": "nyc yarn test"
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015-native-modules": "^6.9.4",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "css-loader": "^0.28.8",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "ignore-styles": "^5.0.1",
    "jsdom": "^11.5.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^4.1.0",
    "mocha-jsdom": "^1.1.0",
    "node-fetch": "^1.7.3",
    "nyc": "^11.4.1",
    "ramda": "^0.25.0",
    "sinon": "^4.1.4",
    "sinon-chai": "^2.14.0",
    "sinon-stub-promise": "^4.0.0",
    "style-loader": "^0.19.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "2.7.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "chart.js": "^2.7.1",
    "husky": "^0.14.3"
  }
}
