.repos-per-contributions
	width 100%
	display inline-block
	margin-top 30px
	h2
		width 100%
		display inline-block
		margin-bottom 20px
		font-size 1.2em
		font-weight 300
		text-align center
	&-list
		display flex
		align-items stretch
		flex-wrap wrap
	&-item
		width 100%
		height 100%
		min-height 100px
		display inline-block
		position relative
		box-sizing border-box
		border 1px solid #D8D8D8
		background-color #D7D7D7
		padding 10px
		cursor pointer
		h3
			width 100%
			height auto
			text-align center
			display inline-block
			font-weight 600
			font-size 1em
			color #000
			word-wrap break-word
		i
			width 15px
			height 15px
			position absolute
			bottom 10px
			right 10px
		svg
			width 100%
			height 100%
			display inline-block
			fill #FFF

@media screen and (min-width 768px)
	.repos-per-contributions
		h2
			font-size 1.4em
