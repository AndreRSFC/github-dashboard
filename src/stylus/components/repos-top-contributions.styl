.repos-per-contributions
	width 100%
	display inline-block
	margin-top 30px
	h2
		width 100%
		display inline-block
		margin-bottom 20px
		font-size 1.4em
		font-weight 300
	&-list
		display flex
		align-items stretch
		flex-wrap wrap
	&-item
		width 100%
		height 100%
		display inline-block
		position relative
		box-sizing border-box
		border 1px solid #D8D8D8
		background-color #5FBFF9
		padding 10px
		cursor pointer
		h3
			width 100%
			height auto
			text-align center
			display inline-block
			font-weight 600
			font-size 1em
			color #000
