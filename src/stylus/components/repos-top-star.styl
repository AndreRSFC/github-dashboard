.repos-per-star
	width 100%
	display inline-block
	margin-bottom 20px
	h2
		width 100%
		display inline-block
		margin-bottom 20px
		font-size 1.2em
		font-weight 300
		text-align center
	&-list
		display flex
		align-items stretch
		flex-wrap wrap
	&-item
		width 100%
		height 100%
		display inline-block
		position relative
		box-sizing border-box
		border 1px solid #D8D8D8
		background-color #d7d7d7
		padding 10px 10px 30px
		cursor pointer
		h3
			width 100%
			height auto
			margin-bottom 10px
			display inline-block
			font-weight 600
			font-size 1.1em
			color #000
		p
			width 100%
			height auto
			margin-bottom 10px
			display inline-block
			font-weight 400
			font-size .8em
			color #000
		i
			width 15px
			height 15px
			position absolute
			bottom 10px
			right 10px
		svg
			width 100%
			height 100%
			display inline-block
			fill #FFF

@media screen and (min-width 768px)
	.repos-per-star
		h2
			font-size 1.4em
