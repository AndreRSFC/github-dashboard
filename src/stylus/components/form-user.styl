.form-user
	h2
		text-align center
		font-weight 600
		color #000
		margin-top 20px
	p
		text-align center
		line-height 25px
		margin-bottom: 20px
	form
		display flex
		margin 20px 0 40px
	input
		width 80%
		height: 50px;
		border 2px solid #008489
		border-right 0
		outline 0
		padding: 0 20px
		font-size 1em
		color #000
		font-weight 400
		&:focus
			border 2px solid #008489
	button
		width 20%
		border 2px solid #008489
		border-left 0px
		background-color #008489
		color: #FFF
		font-size 1em
		font-weight 400
		cursor pointer
		outline 0
		&:focus
			background-color #008489
			border 2px solid #008489
		&:hover
			background-color #39b899
