.form-user
	width 100%
	&-logo
		width 100%
		display inline-block
		text-align center
		margin 10px 0
		img
			max-width 40%
	h2
		text-align center
		font-weight 600
		color #000
		margin-top 20px
		font-size 1em
	p
		text-align center
		line-height 25px
		margin-bottom 10px
		font-size .8em
	form
		display flex
		margin 20px 0 20px
		flex-direction column
	input
		width 100%
		height: 50px;
		border 2px solid #008489
		outline 0
		padding: 0 20px
		font-size 1em
		color #000
		font-weight 400
		&:focus
			border 2px solid #008489
	button
		width 100%
		height 50px
		margin-top 20px
		border 2px solid #008489
		background-color #008489
		color: #FFF
		font-size 1em
		font-weight 400
		cursor pointer
		outline 0
		&:focus
			background-color #008489
			border 2px solid #008489
		&:hover
			background-color #39b899

@media screen and (min-width 768px)
	.form-user
		&-logo
			img
				max-width 20%
		h2
			font-size 1.2em
		p
			font-size 1em
		form
			flex-direction row
		input
			width 80%
			border-right 0
		button
			width 20%
			border-left 0
			margin-top 0
@media screen and (min-width 1000px)
	.form-user
		&-logo
			margin 20px 0
			img
				max-width 100%
		form
			margin 40px 0 40px
		button
			font-size 1.2em
		h2
			font-size 1.8em
		p
			font-size 1.2em
			margin-bottom 20px
