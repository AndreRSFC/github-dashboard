header 
  width 100%
  display inline-block
  background-color $keppel
  h1
    height 32px
    display flex
    justify-content center
    align-items center
    text-align center
    font-size 1.4em
    color $white
    font-weight 600
		text-transform uppercase 
		a 
			color $white
			text-decoration none
		i
			display flex
			justify-content center
			align-items center
			border 2px solid $white
			border-radius 50%
			padding 5px
		svg
			width 15px
			height 15px
			fill $white
  .social
    display flex
    justify-content center
    padding-bottom 0px
  .social-networks
    height 28px
    padding 0
    display flex
    align-items center
    justify-content center
    p
      float left
      margin-right 5px
      color $white
      font-weight 400
      font-size .7em
      text-align right
    li
      text-align center
      float left
      margin 0 5px
      display flex
      align-items center
      cursor pointer
    svg
      width 15px
      height 15px
